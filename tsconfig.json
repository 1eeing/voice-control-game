{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ES2020"],
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "@types/dom-speech-recognition"],
    "resolveJsonModule": true,
    "declarationDir": "./lib/types",
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "include": ["./src"]
}
